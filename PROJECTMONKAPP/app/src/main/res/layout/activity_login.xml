<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/google_pixe"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:id="@+id/logomonk"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="104dp"
        android:background="@drawable/monk_logo"/>
    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="Login error. Incorrect username or password"
        android:layout_gravity="center"
        android:textColor="@color/monkRed"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="monospace"
        android:hint="Username"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="monospace"
        android:hint="Password"
        android:inputType="textWebPassword"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/round_border_red"
        android:fontFamily="monospace"
        android:hint="Login"
        android:inputType="textVisiblePassword"
        android:textColorHint="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>